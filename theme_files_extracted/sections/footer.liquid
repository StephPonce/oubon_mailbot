<footer class="site-footer" role="contentinfo">
  <div class="container">
    <div class="footer-content">
      {%- comment -%} Column 1: Brand {%- endcomment -%}
      <div class="footer-column">
        <div class="footer-logo">OUBON SHOP</div>
        <p class="footer-tagline">Smarter living, simplified.</p>

        <div class="footer-social">
          {%- if section.settings.social_instagram_link != blank -%}
            <a href="{{ section.settings.social_instagram_link }}" class="social-icon" aria-label="Instagram" target="_blank" rel="noopener">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
