<section class="section section-lg scroll-reveal">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.heading }}</h2>
      {%- if section.settings.subheading != blank -%}
        <p class="section-subtitle">{{ section.settings.subheading }}</p>
      {%- endif -%}
    </div>

    <div class="category-grid">
      {%- if section.settings.show_category_1 -%}
      <a href="{{ section.settings.category_1_link }}" class="category-card">
        <div class="category-icon">{{ section.settings.category_1_icon }}</div>
        <h3 class="category-name">{{ section.settings.category_1_name }}</h3>
      </a>
      {%- endif -%}

      {%- if section.settings.show_category_2 -%}
