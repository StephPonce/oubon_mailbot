        <div class="category-icon">{{ section.settings.category_6_icon }}</div>
        <h3 class="category-name">{{ section.settings.category_6_name }}</h3>
      </a>
      {%- endif -%}

      {%- if section.settings.show_category_7 -%}
      <a href="{{ section.settings.category_7_link }}" class="category-card">
        <div class="category-icon">{{ section.settings.category_7_icon }}</div>
