        <div class="category-icon">{{ section.settings.category_8_icon }}</div>
        <h3 class="category-name">{{ section.settings.category_8_name }}</h3>
      </a>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
.category-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  margin-top: 3rem;
}

@media (max-width: 640px) {
  .category-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
}
</style>

