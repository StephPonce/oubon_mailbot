APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true

# Gmail OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth2callback
GOOGLE_SCOPES=https://www.googleapis.com/auth/gmail.modify
GOOGLE_TOKEN_FILE=.secrets/gmail_token.json
GOOGLE_CREDENTIALS_FILE=.secrets/credentials.json

# OpenAI for AI-powered replies (during operating hours)
OPENAI_API_KEY=

# Shopify for order lookup, tracking, and refunds
SHOPIFY_STORE=your-store.myshopify.com
SHOPIFY_API_TOKEN=your_admin_api_token
SHOPIFY_MODE=safe

# Optional: Slack notifications
SLACK_WEBHOOK_URL=

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/mailbot.db
